{% macro addrqr(coin) %}

<div class="row">
    <div class="col-lg-12">
        <h4 class="blockquote">{{ coin | upper }} Wallet</h4>
        <blockquote class="selected">
            <button style="background-color: white; color: black" onclick="copyToClipboard('#{{ coin }}-wallet')">
        <p id="{{ coin }}-wallet" name="{{ coin }}-value"></p>
        </button>
        </blockquote>
    </div>
</div>
<div class="row" style="text-align: center">
    <div class="col-lg-12">
        <div id="{{ coin }}-qrimage">
            <img id="qrious-{{ coin }}">
        </div>
    </div>
</div>

{% endmacro %}